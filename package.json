{
  "name": "librus-desktop-addons",
  "description": "Dodatki do Librusa",
  "scripts": {
    "build": "webpack",
    "prepack": "web-ext build --overwrite-dest",
    "lint": "web-ext lint",
    "start": "webpack -w",
    "make": "npm run make:ff",
    "make:ff": "webpack --mode=production --devtool=false --dist=firefox && web-ext build --overwrite-dest",
    "make:chrome": "webpack --mode=production --devtool=false --dist=chrome",
    "make:all": "npm run make:ff && npm run make:chrome"
  },
  "author": "kubaska",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "style-loader": "^1.0.0",
    "ts-loader": "^6.1.2",
    "typescript": "^3.6.3",
    "web-ext-webpack-plugin": "github:hiikezoe/web-ext-webpack-plugin",
    "webextension-polyfill": "^0.4.0",
    "webextension-polyfill-ts": "^0.10.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9",
    "webpack-preprocessor": "^0.1.12"
  },
  "webExt": {
    "sourceDir": "dist-firefox"
  }
